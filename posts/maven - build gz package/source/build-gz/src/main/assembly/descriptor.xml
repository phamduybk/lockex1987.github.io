<?xml version="1.0"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>packagingDevInterne</id>

	<includeBaseDirectory>false</includeBaseDirectory>

	<formats>
		<format>tar.gz</format>
	</formats>


	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/appassembler-jsw/jsw/${project.app.name}</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>bin/${project.app.name}</exclude>
				<exclude>bin/${project.app.name}.bat</exclude>
				<exclude>bin/wrapper-linux-x86-32</exclude>
				<exclude>bin/wrapper-linux-x86-64</exclude>
			</excludes>
			<fileMode>640</fileMode>
			<directoryMode>750</directoryMode>
		</fileSet>

		<fileSet>
			<directory>src/main/assembly</directory>
			<outputDirectory>/logs</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
		</fileSet>

		<!-- <fileSet> -->
		<!-- <directory>src/main/gluConf</directory> -->
		<!-- <outputDirectory>bin</outputDirectory> -->
		<!-- <excludes> -->
		<!-- <exclude>*</exclude> -->
		<!-- </excludes> -->
		<!-- </fileSet> -->
	</fileSets>

	<files>
		<file>
			<source>${project.build.directory}/appassembler/bin/${project.app.name}.sh</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>750</fileMode>
		</file>
		<file>
			<source>${project.build.directory}/appassembler/bin/${project.app.name}.bat</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>750</fileMode>
		</file>
		<file>
			<source>${project.build.directory}/appassembler-jsw/jsw/${project.app.name}/bin/${project.app.name}</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>750</fileMode>
		</file>
		<file>
			<source>${project.build.directory}/appassembler-jsw/jsw/${project.app.name}/bin/wrapper-linux-x86-32</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>750</fileMode>
		</file>
		<file>
			<source>${project.build.directory}/appassembler-jsw/jsw/${project.app.name}/bin/wrapper-linux-x86-64</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>750</fileMode>
		</file>
	</files>


</assembly>
