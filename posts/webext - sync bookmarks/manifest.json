{
  "name": "Sync Bookmarks",
  "description": "Push and pull bookmarks between local and cloud.",
  "version": "1.0.0",  
  "permissions": [
    "bookmarks"
  ],
  "browser_action": {
      "default_title": "Sync Bookmarks",
      "default_icon": "images/icon.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
