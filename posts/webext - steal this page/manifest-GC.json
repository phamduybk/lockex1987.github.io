{
    "manifest_version": 2,
	"name": "Steal this Page",
	"version": "1.0.0",
	"description": "Save a web page as a single HTML file.",
	"icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [ "http://*/*", "https://*/*", "activeTab", "tabs", "webNavigation", "contextMenus", "notifications", "storage" ],
	"browser_action": { "default_icon": { "16": "images/icon-16.png" }, "default_title": "Steal this Page" },
    "background": { "scripts": [ "background.js" ] },

    "minimum_chrome_version": "56"
}
